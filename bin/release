#!/usr/bin/env ruby
# frozen_string_literal: true

require_relative '../lib/console_creep/version'

version = ConsoleCreep::VERSION
system('gem build consolecreep.gemspec')
system("gem push consolecreep-#{version}.gem")
system("rm consolecreep-#{version}.gem")
system("git tag -a v#{version} -m 'version #{version}'")
system("git push origin v#{version}")
