#!/usr/bin/env ruby
# frozen_string_literal: true

require_relative '../lib/console_creep/version'

version = ConsoleCreep::VERSION
system('gem build console_creep.gemspec')
system("gem push console_creep-#{version}.gem")
system("rm console_creep-#{version}.gem")
system("git tag -a v#{version} -m 'version #{version}'")
system("git push origin v#{version}")
